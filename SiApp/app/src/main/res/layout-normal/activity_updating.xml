<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Updating">

    <EditText
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="37dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="30dp"
        android:hint="имя" />

    <EditText
        android:id="@+id/tabid_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="37dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="30dp"
        android:hint="номер телефона" />

    <EditText
        android:id="@+id/codekey_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="номер пропуска"
        android:layout_below="@+id/tabid_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="37dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="30dp" />

    <EditText
        android:id="@+id/group_text"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/codekey_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="37dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="62dp"
        android:layout_marginRight="62dp"
        android:hint="группа" />

    <RadioGroup
        android:id="@+id/radio_group_activasion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:layout_marginStart="37dp"
        android:layout_marginLeft="37dp">

        <RadioButton
            android:id="@+id/activate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activate_pass"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/fire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fire"/>


    </RadioGroup>

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radio_group_activasion"
        android:text="@string/save"
        android:layout_marginStart="37dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="37dp" />

    <Button
        android:id="@+id/back_to_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/save"
        android:text="@string/back"
        android:layout_marginTop="11dp"
        android:layout_marginStart="37dp"
        android:layout_marginLeft="37dp" />


</RelativeLayout>